---
import { Image } from "astro:assets"
import { blogs } from "@/data/blogs.ts"

---


<section class="blogs" id="blogs">

  <h1 class="heading"> our <span>blogs</span></h1>

  <div class="box-container">
    {
      blogs.map((b) => {
        return (
          <div class="box">
            <div class="image">
              <Image src={b.image} alt="drink image"/>      
            </div> 
            <div class="content"> 
              <a href="#" class="title">{b.title}</a>           
              <span>by {b.author} / {b.date}</span>
              <p>{b.description}</p>
              <a href="#" class="btn">read more</a>
            </div>
          </div>
          
        )
      })
    }
  </div>
</section>
