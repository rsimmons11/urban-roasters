---
import { Image } from "astro:assets";
import coffeePackage from "@/assets/Coffee-packaging.jpg"
import { coffees } from "@/data/siteData";
import Link from "../Link.astro"
---


<section class="products" id="products">

  <h1 class="heading"> our <span>products</span></h1>

  <div class="box-container">

    {
      coffees.map((c) => {
        return (
          <div class="box">
            <div class="image">
              <Image src={c.image} alt={c.name} format="avif"/>  
            </div>
            <div class="content">
              <h3>{c.name}</h3>
              <div class="price">
                {c.price.toLocaleString("en-us", {
                  style: "currency",
                  currency: "USD",
                })}
              </div>
              <Link class="btn" href="#">Add to Cart</Link>
            </div> 
             
          </div>
          
        )
      })
    }
  </div>
</section>
